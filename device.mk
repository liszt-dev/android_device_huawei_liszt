# Power
PRODUCT_PACKAGES += \
    power.hi3635

# Properties
PRODUCT_DEFAULT_PROPERTY_OVERRIDES += \
    ro.enable_boot_charger_mode=0 \
    persist.sys.usb.config=adb,mtp

# Ramdisk
